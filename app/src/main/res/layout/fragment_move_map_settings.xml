<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.robellistudios.photobuddy.MoveMapSettings"
    android:background="#daffffff"
    android:padding="20dp"
    android:orientation="horizontal"
    android:weightSum="1"
    android:id="@+id/move_map_settings_id"
    android:gravity="center"
    android:layoutMode="opticalBounds">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_right_up"
            android:layout_gravity="right|top"
            android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton_left_up"
        android:layout_gravity="left|top" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_right_down"
            android:layout_gravity="right|center_vertical"
            android:layout_alignTop="@+id/radioButton_left_down"
            android:layout_alignStart="@+id/radioButton_right_up" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_left_down"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentStart="true"
            android:layout_marginTop="115dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@mipmap/ic_landscape_1024_2048"
            android:layout_alignTop="@+id/radioButton_right_up"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/radioButton_right_down" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/radioButton_right_down"
        android:layout_alignEnd="@+id/radioButton_right_down"
        android:weightSum="1"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Map Size"
            android:id="@+id/textView3"
            android:singleLine="true"
            android:layout_gravity="left|top"
            android:layout_below="@+id/radioButton_left_down"
            android:layout_alignParentStart="true" />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:elegantTextHeight="false"
                android:layout_alignParentStart="true"
                android:text="Big"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true" />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true" />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton3"
                android:layout_below="@+id/radioButton"
                android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Opaque"
            android:id="@+id/textView4"
            android:singleLine="true"
            android:layout_gravity="left|top"
            android:layout_below="@+id/radioButton_left_down"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:max="100"
            android:indeterminate="false"
            android:paddingTop="10dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ok_from_move_map_settings"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_ok" />

    </LinearLayout>

</RelativeLayout>
